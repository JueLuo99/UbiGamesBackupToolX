<Page x:Class="UbiGamesBackupToolX.Pages.AllSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UbiGamesBackupToolX.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllSettingPage" Loaded="Page_Loaded">

    <WrapPanel Orientation="Vertical" Margin="15,0,0,0">
        <Label FontSize="16" Content="综合设置"/>
        <Button x:Name="ShortcutButton" Content="发送快捷方式到桌面" Margin="0,10" Click="ShortcutButton_Clicked"/>
        <CheckBox x:Name="powerCkb" Content="开机自动运行" Margin="0,10" Checked="powerCkb_Checked" Unchecked="powerCkb_Checked"/>
    </WrapPanel>
</Page>
