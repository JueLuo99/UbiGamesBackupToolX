<Page x:Class="UbiGamesBackupToolX.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UbiGamesBackupToolX.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">
    <DockPanel Margin="15,0,0,0">
        <WrapPanel Orientation="Vertical">
            <Label FontSize="16" Margin="0,10,0,0">关于UbiGamesBackupTool</Label>
            <TextBlock x:Name="ToolVersion" FontSize="14" Margin="0,10">当前版本:</TextBlock>
            <TextBlock FontSize="14" Margin="0,10">开发者：setTile Studio</TextBlock>
            <Button x:Name="Toolfeedback" FontSize="14" Click="AboutfeedbackBtn_Clicked">联系我们，反馈更多</Button>
        </WrapPanel>
        <Image DockPanel.Dock="Left" Source="../Resources/setTile-Studio.gif"/>
    </DockPanel>
</Page>
